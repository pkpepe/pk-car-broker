<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PK Car Broker</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Main Css -->
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <div class="container-fluid my-5">
        <h1 class="text-center">Admin Panel</h1>
        <div class="app-title">
            <div class="row mr-auto">
                <ul>
                    <a class="btn btn-outline-primary" href="../../admin/appointments">
                        Back
                    </a>
                </ul>
                <div class="ml-3">
                    <h1>Edit Appointment</h1>
                </div>
            </div>
        </div>
        <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="tile">
                <div class="tile-body">
                    <form id="form" method="post" action="../updatebappointment">
                        <!--Reference No start-->
                        <div class="form-group row">
                            <label for="ref_id" class="col-sm-2 col-form-label"> Ref No </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="ref_id" name="ref" value="<%= data.ref %>" readonly>
                            </div>
                        </div>
                        <!--Reference No end-->
                        <!--Name start-->
                        <div class="form-group row">
                            <label for="name_id" class="col-sm-2 col-form-label"> Name </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="name_id" name="name" value="<%= data.name %>" readonly>
                            </div>
                        </div>
                        <!--Name end-->
                        <!--Status start-->
                        <div class="form-group row">
                            <label for="status_id" class="col-sm-2 col-form-label"> Status </label>
                            <div class="col-sm-10">
                                <select class="form-control" name="status" id="status_id">
                                    <option value="pending" <%if(data.status=="pending" ){%>
                                        <%="selected"%>
                                        <%}%>
                                        >Pending</option>
                                    <option value="confirmed" <%if(data.status=="confirmed" ){%>
                                        <%="selected"%>
                                        <%}%>
                                        >Confirmed</option>
                                    <option value="canceled" <%if(data.status=="canceled" ){%>
                                        <%="selected"%>
                                        <%}%>
                                        >Calceled</option>
                                </select>
                            </div>
                        </div>
                        <!--Status end-->
                        <!--Comment start-->
                        <div class="form-group row">
                            <label for="comment" class="col-sm-2 col-form-label"> Comment </label>
                            <div class="col-sm-10">
                                <textarea class="form-control" name="comment" id="" cols="10" rows="3"></textarea>
                            </div>
                        </div>
                        <!--Comment end-->
                        <input type="hidden"  name="doc_id" value="<%= data.doc_id %>">
                        <div class="form-group row">
                            <div class="col-sm-10 ml-auto">
                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Scripts -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>

</html>